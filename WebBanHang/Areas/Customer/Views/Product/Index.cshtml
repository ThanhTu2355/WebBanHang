@model List<Product>

<div class="container mt-4">
    <div class="row">
        <!-- CATEGORY LIST -->
        <div class="col-md-3">
            <h5>CATEGORY LIST</h5>
            <ul class="list-group">
                @foreach (var category in ViewBag.Categories)
                {
                    var isActive = (ViewBag.SelectedCategoryId != null && ((int)ViewBag.SelectedCategoryId == category.Id)) ? "active" : "";
                    int count = ViewBag.CountProduct.ContainsKey(category.Id) ? ViewBag.CountProduct[category.Id] : 0;
                    <a class="list-group-item d-flex justify-content-between align-items-center @isActive category-link"
                       href="#" data-category-id="@category.Id">
                        @category.Name
                        <span class="badge bg-primary rounded-pill">@count</span>
                    </a>
                }
            </ul>
        </div>

        <!-- PRODUCT LIST -->
        <div class="col-md-9">
            <h5>PRODUCT LIST</h5>
            <div id="product-list">
				<partial name="_ProductListPartial" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(".category-link").click(function (e) {
            e.preventDefault();
            var categoryId = $(this).data("category-id");
            $('.category-link').removeClass('active');
            $(this).addClass('active');
            $.ajax({
                url: '@Url.Action("Ajax", "Product")',
                type: 'GET',
                data: { categoryId: categoryId },
                success: function (data) {
                    $("#product-list").html(data);
                }
            });
		});
    </script>
}